<%- include('partials/header.ejs') %>

<section class="intro-header">
  <h1 class="intro-name">Welcome, Abhishek!</h1>
  <p class="intro-date">Today is <%= currentDay %></p>
</section>

<section class="api-features">

  <div id="api-carousels" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

      <!-- Weather API -->
      <div class="carousel-item container-fluid active">
        <h2 class="api-title">Weather</h2>

        <% if(weatherData.myTemp != "") { %>

        <p class="weather-info">
          The weather in <%= weatherData.myPlace %> is
        </p>
        <p class="weather-temp">
          <img src="<%= weatherData.myImage %>">
          <%= weatherData.myTemp %>&deg; F
        </p>

        <% } else if (weatherData.myPlace != "") { %>
        <p>Weather cannot be found in <%= weatherData.myPlace %>!!</p>
        <% } else { %>
        <form class="" action="/" method="post">
          <label for="city">City Name:</label>
          <input id="city" type="text" name="cityName">
          <button type="submit" name="button">Send</button>
        </form>
        <% } %>

      </div>

      <!-- Quote of the Day -->
      <div class="carousel-item container-fluid">
        <h2 class="api-title">Quote of the Day</h2>
        <p> "<%= quoteOfTheDay.myQuote %>" </p>
        <p>By <%= quoteOfTheDay.myAuthor %> </p>
      </div>

      <!-- News API -->
      <div class="carousel-item container-fluid">
        <h2 class="api-title">News</h2>
        <form class="" action="/news" method="post">
          <select name='newsQuery'>
            <optgroup label="news">
              <option value='general'>General</option>
              <option value='business'>Business</option>
              <option value='entertainment'>Entertainment</option>
              <option value='health'>Health</option>
              <option value='science'>Science</option>
              <option value='sports'>Sports</option>
              <option value='technology'>Technology</option>
            </optgroup>
          </select>
          <input type="submit">
        </form>
      </div>
    </div>

    <!-- Carousel Left and Right Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#api-carousels" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#api-carousels" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>

  </div>
</section>

<%- include('partials/footer.ejs') %>
